<% include head_homepage %>
<style>
.profile-pic {
  background: url('/images/icon-profilepicture.png');
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 15px;
  width: 100px;
  height: 100px;
}
